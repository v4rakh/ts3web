{% extends 'layout.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <form class="form-signin" role="form" name="login" id="login" method="post">
                    <h1 class="form-signin-heading header">{{ title }}</h1>
                    <input type="text" id="username" name="username" class="form-control" placeholder="{{ getenv('teamspeak_default_user') }}" value="{{ getenv('teamspeak_default_user') }}" autofocus required>
                    <input type="password" id="password" name="password" class="form-control" placeholder="{% trans %}login.form.password.placeholder{% endtrans %}" required>
                    <br/>
                    <input class="btn btn-lg btn-primary btn-block" type="submit" name="login" value="{% trans %}login.form.button{% endtrans %}"/>


                {% if getenv('mail_enabled') is not empty and getenv('mail_enabled') == 'true' %}
                    <p class="btn btn-lg btn-primary btn-block"><a href="/forgotpassword">{% trans %}login.form.forgotpassword{% endtrans %}</a></p>
                {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}